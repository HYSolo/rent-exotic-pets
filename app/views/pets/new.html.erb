<h1>Add a new Pet!</h1>

<div>
  <%= simple_form_for @pet do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :species %>
    <%= f.input :danger_meter, collection: 0..5 %>
    <%= f.input :price %>
    <%= f.input :address, id: "pet_address" %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Submit", class: "btn btn-primary"%>
  <% end %>
</div>
