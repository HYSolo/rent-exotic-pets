<h1>Pets</h1>

<%= render '/components/search' %>

<div class="cards">
  <% if @pets.empty? %>
    <h2> 🦁 No Results 🐻 </h2>
  <% else %>
    <% @pets.each do |pet| %>
      <%= render "components/pet_card", pet: pet %>
    <% end %>
  <% end %>
</div>

<div class="w-100" style="height: 400px;">
  <%= render "components/map", markers: @markers %>
</div>
