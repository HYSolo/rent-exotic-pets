<h1>Pets</h1>

<%= render '/components/search' %>

<div class="cards">
  <% if @pets.empty? %>
    <h2> 🦁 No Results 🐻 </h2>
  <% elsif params[:query].present? %>
    <% @pets.each do |pet| %>
      <%= render "components/pet_card", pet: pet.searchable %>
    <% end %>
  <% elsif params[:query].nil? %>
    <% @pets.each do |pet| %>
      <%= render "components/pet_card", pet: pet %>
    <% end %>
  <% end %>
</div>

