<div class="container mt-3">
  <div class="title d-flex justify-content-between align-items-center">
    <div>
      <h1><%= @pet.name %></h1>
      <h4><%= @pet.description %></h4>
    </div>
    <%= link_to "Rrrrent Me", new_pet_booking_path(@pet), class: "btn btn-flat"  %>
  </div>

  <div class="mt-1 mb-3 border-top border-dark"></div>

  <div class="photos mx-auto mb-3 p-5 bg-white">
    <% if @pet.photos.attached? %>
      <%= render "components/carousel", pet: @pet %>
    <% else %>
      <img src="https://images.unsplash.com/photo-1546182990-dffeafbe841d?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1940&q=80" alt="" class="d-block w-50", style="height: 200px;">
    <% end %>
  </div>

  <h2>Details</h2>

  <div class="d-flex justify-content-around align-items-center shadow">
    <div class="text-center mt-3">
      <i class="fas fa-paw"></i>
      <p><%= @pet.species %></p>
    </div>
    <div class="text-center mt-3">
      <i class="fas fa-exclamation-triangle"></i>
      <p><%= @pet.danger_meter %>/5</p>
    </div>
    <div class="text-center mt-3">
      <i class="fas fa-map-marker-alt"></i>
      <p><%= @pet.address %></p>
    </div>
  </div>
  <div class="w-50" style="height: 400px;">
    <%= render "components/map", markers: @markers %>
  </div>
</div>