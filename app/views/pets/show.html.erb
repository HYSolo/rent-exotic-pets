

<div class="d-flex">
  <div class="details">
  <div class="title mb-5">
    <h1 class="d-inline"><%= @pet.name %></h1> - <h4 class="d-inline">$<%= @pet.price %>/week</h4>
    <%= link_to "Rrrrent Me", new_pet_booking_path(@pet), class: "booking-link d-block"  %>
  </div>
    <h4>Details</h4>
    <ul>
      <li><strong>Species</strong>: <%= @pet.species %></li>
      <li><strong>Location</strong>: <%= @pet.location %></li>
      <li><strong>Danger Meter</strong>: <%= @pet.danger_meter %>/5</li>
      <li><strong>Owner</strong> : <%= @pet.user.email %></li>
    </ul>

    <h4>Description</h4>
    <p><%= @pet.description %></p>
  </div>
</div>

<div class="w-50">
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <% @pet.photos.drop(1).each do |photo| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= @pet.photos.drop(1).index(photo) %>"></li>
      <% end %>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= cl_image_tag @pet.photos.first.key, height: 200, crop: :thumb, class: "d-block w-100" %>
      </div>
      <% @pet.photos.drop(1).each do |photo| %>
        <div class="carousel-item">
          <%= cl_image_tag photo.key, height: 200, crop: :thumb, class: "d-block w-100" %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>