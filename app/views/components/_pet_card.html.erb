<%= link_to pet_path(pet) do %>
  <div class="card-trip">
    <% if pet.photos.attached? %>
      <img src="<%= cl_image_path pet.photos.first.key, height: 300, crop: :fill %>" />
    <% else %>
      <img src="https://images.unsplash.com/photo-1546182990-dffeafbe841d?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1940&q=80" />
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= "#{pet.name} (#{pet.species})" %></h2>
        <p><%= pet.description %></p>
      </div>
      <div>
        <h2 class="card-trip-pricing"><%= number_to_currency(pet.price) %></h2>
        <h2 class="card-trip-danger">Danger: <%= pet.danger_meter %>/5</h2>
      </div>
      <%= render "components/avatar", user: pet.user %>
    </div>
  </div>
<% end %>
