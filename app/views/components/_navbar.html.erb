<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://image.flaticon.com/icons/png/512/1810/1810989.png" %>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "Search", pets_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item">
        <%# TODO: Add  the correct path to My Pets dashboard%>
        <%= link_to "My Pets", pets_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%# TODO: Add  the correct path to My Rentals dashboard%>
        <%= link_to "My Rentals", pets_path, class: "nav-link" %>
      </li>
      <% end %>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <% if user_signed_in? %>
            <%= link_to "Logout", destroy_user_session_path, class: "dropdown-item" %>
          <% else %>
            <%= link_to "Login", new_user_session_path, class: "dropdown-item" %>
            <%= link_to "Create an Account", new_user_registration_path, class: "dropdown-item" %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</div>
