<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "https://image.flaticon.com/icons/png/512/1810/1810989.png" %>
    <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "See all Pets", pets_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
      <%# TODO: turn this into a partial %>
      <li class="nav-item">
        <%= link_to "Add a Pet", new_pet_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "My Pets", dashboard_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "My Bookings", bookings_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <div class="dropdown-toggle" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= render "components/avatar", user: current_user %>
        </div>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>
